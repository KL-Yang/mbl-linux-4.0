From: YangKunlun <yangkunlun@gmail.com>
Date: Fri, 8 Apr 2016 15:19:08 +0000
Subject: [PATCH 2/4] 01-Add basic board support

---
 arch/powerpc/platforms/44x/Kconfig         | 11 +++++++++++
 arch/powerpc/platforms/44x/ppc44x_simple.c |  1 +
 2 files changed, 12 insertions(+)

diff --git a/arch/powerpc/platforms/44x/Kconfig b/arch/powerpc/platforms/44x/Kconfig
index 5538e57..36f0357 100644
--- a/arch/powerpc/platforms/44x/Kconfig
+++ b/arch/powerpc/platforms/44x/Kconfig
@@ -30,6 +30,17 @@ config BLUESTONE
 	help
 	  This option enables support for the APM APM821xx Evaluation board.
 
+config APOLLO3G
+	bool "Apollo3g"
+	depends on 44x
+	default n
+	select PPC44x_SIMPLE
+	select APM821xx
+	select PPC4xx_PCI_EXPRESS
+	select IBM_EMAC_RGMII
+	help
+	  This option enables support for the WDC Apollo3G NAS.
+
 config EBONY
 	bool "Ebony"
 	depends on 44x
diff --git a/arch/powerpc/platforms/44x/ppc44x_simple.c b/arch/powerpc/platforms/44x/ppc44x_simple.c
index 573c3d2..c4f2643 100644
--- a/arch/powerpc/platforms/44x/ppc44x_simple.c
+++ b/arch/powerpc/platforms/44x/ppc44x_simple.c
@@ -53,6 +53,7 @@ static char *board[] __initdata = {
 	"amcc,arches",
 	"amcc,bamboo",
 	"apm,bluestone",
+	"amcc,apollo3g",
 	"amcc,glacier",
 	"ibm,ebony",
 	"amcc,eiger",
